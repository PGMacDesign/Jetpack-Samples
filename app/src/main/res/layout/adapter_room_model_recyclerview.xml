<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_room_model_root"
    android:foreground="@drawable/selectable_item_foreground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_room_model_tv1"
        android:textColor="@color/black"
        android:padding="2dp"
        android:textSize="12sp"
        android:clickable="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_room_model_tv2"
        android:layout_below="@+id/adapter_room_model_tv1"
        android:textColor="@color/black"
        android:padding="2dp"
        android:textSize="15sp"
        android:clickable="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_room_model_tv3"
        android:layout_below="@+id/adapter_room_model_tv2"
        android:textColor="@color/black"
        android:padding="2dp"
        android:textSize="14sp"
        android:clickable="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/adapter_room_model_tv3"
        android:background="@color/black"
        android:id="@+id/separator"
        />
</RelativeLayout>